# facebook_api.py
from flask import session

def get_facebook_posts(page_id):
    token = session.get('access_token')  # Utiliser le token utilisateur stock√© en session
    posts_url = f"https://graph.facebook.com/{API_VERSION}/{page_id}/posts"
    params = {
        'access_token': token,
        'fields': 'id,created_time,message,attachments'
    }
    response = requests.get(posts_url, params=params)
    return response.json().get('data', [])
