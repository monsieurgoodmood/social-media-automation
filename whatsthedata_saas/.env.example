# =====================================================
# CONFIGURATION WHATSTHEDATA - EXEMPLE
# =====================================================

# ==================
# APPLICATION CONFIG
# ==================
APP_NAME=WhatsTheData
APP_VERSION=1.0.0
BASE_URL=https://your-app.herokuapp.com
ENVIRONMENT=production

# ==================
# STRIPE CONFIGURATION
# ==================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# ==================
# JWT CONFIGURATION
# ==================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==================
# LINKEDIN CONFIGURATION
# ==================
COMMUNITY_CLIENT_ID=your_linkedin_client_id
COMMUNITY_CLIENT_SECRET=your_linkedin_client_secret
COMMUNITY_ACCESS_TOKEN=your_linkedin_access_token
COMMUNITY_REFRESH_TOKEN=your_linkedin_refresh_token

LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_REFRESH_TOKEN=your_linkedin_refresh_token

# ==================
# FACEBOOK CONFIGURATION
# ==================
FB_CLIENT_ID=your_facebook_app_id
FB_CLIENT_SECRET=your_facebook_app_secret

# ==================
# DATABASE CONFIGURATION
# ==================
DATABASE_URL=postgresql://user:password@hostname:port/database

# ==================
# SECURITY CONFIGURATION
# ==================
ALLOWED_HOSTS=localhost,your-domain.com
CORS_ORIGINS=https://datastudio.google.com,https://lookerstudio.google.com

